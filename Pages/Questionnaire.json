import React, { useState, useEffect } from 'react';
import { useQuery } from '@tanstack/react-query';
import { base44 } from '@/api/base44Client';
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Badge } from '@/components/ui/badge';
import { Progress } from '@/components/ui/progress';
import { Tabs, TabsContent, TabsList, TabsTrigger } from '@/components/ui/tabs';
import { 
  TrendingUp, AlertCircle, CheckCircle, Lightbulb, ArrowRight, 
  Loader2, RefreshCw, Target, Eye, Package, MessageSquare, 
  BarChart3, Cpu, ChevronRight
} from 'lucide-react';
import { Link } from 'react-router-dom';
import { createPageUrl } from '@/utils';

const pillarConfig = {
  brand_core_identity: {
    name: 'Brand Core',
    icon: Target,
    color: 'text-orange-500',
    bgColor: 'bg-orange-50',
    description: 'Purpose, values, and positioning'
  },
  visual_identity: {
    name: 'Visual Identity',
    icon: Eye,
    color: 'text-purple-500',
    bgColor: 'bg-purple-50',
    description: 'Logo, colors, typography'
  },
  product_experience: {
    name: 'Product Experience',
    icon: Package,
    color: 'text-blue-500',
    bgColor: 'bg-blue-50',
    description: 'Offering, journey, quality'
  },
  verbal_identity: {
    name: 'Verbal Identity',
    icon: MessageSquare,
    color: 'text-green-500',
    bgColor: 'bg-green-50',
    description: 'Voice, messaging, storytelling'
  },
  market_plan: {
    name: 'Market Plan',
    icon: BarChart3,
    color: 'text-pink-500',
    bgColor: 'bg-pink-50',
    description: 'Research, channels, acquisition'
  },
  technology: {
    name: 'Technology',
    icon: Cpu,
    color: 'text-cyan-500',
    bgColor: 'bg-cyan-50',
    description: 'Digital, social, analytics'
  }
};

const tierInfo = {
  Seed: { emoji: 'ðŸŒ±', color: 'bg-green-100 text-green-800', target: 40 },
  Sprout: { emoji: 'ðŸŒ¿', color: 'bg-blue-100 text-blue-800', target: 60 },
  Star: { emoji: 'â­', color: 'bg-purple-100 text-purple-800', target: 80 },
  Superbrand: { emoji: 'ðŸ†', color: 'bg-orange-100 text-orange-800', target: 95 },
};

export default function BrandHealth() {
  const [analysis, setAnalysis] = useState(null);
  const [isAnalyzing, setIsAnalyzing] = useState(false);

  const { data: user } = useQuery({
    queryKey: ['user'],
    queryFn: () => base44.auth.me(),
  });

  const { data: questionnaires, isLoading } = useQuery({
    queryKey: ['questionnaires', user?.email],
    queryFn: () => base44.entities.BrandQuestionnaire.filter({ created_by: user?.email }),
    enabled: !!user?.email,
  });

  const questionnaire = questionnaires?.[0];

  const runAnalysis = async () => {
    if (!questionnaire?.responses) return;

    setIsAnalyzing(true);
    try {
      const result = await base44.integrations.Core.InvokeLLM({
        prompt: `You are Immersify's AI brand strategist. Analyze this brand audit questionnaire and provide a comprehensive health assessment.

Brand Maturity Tier: ${questionnaire.maturity_tier}

Questionnaire Responses:
${JSON.stringify(questionnaire.responses, null, 2)}

Provide a detailed analysis in JSON format with:
1. overall_score: Number 0-100 representing brand health
2. overall_summary: 2-3 sentence executive summary
3. pillar_scores: Object with scores for each pillar (brand_core_identity, visual_identity, product_experience, verbal_identity, market_plan, technology) - each having score (0-100), status ("strong", "developing", "needs_work"), and key_insight (1 sentence)
4. strengths: Array of 3 specific things the brand is doing well
5. weaknesses: Array of 3 specific areas needing improvement
6. quick_wins: Array of 3 actionable items they can do this week
7. strategic_priorities: Array of 3 longer-term strategic recommendations
8. brand_personality: Object with archetype (one of: Innocent, Explorer, Sage, Hero, Outlaw, Magician, Regular Guy, Lover, Jester, Caregiver, Creator, Ruler) and description (1 sentence why)

Be specific, constructive, and actionable. Reference their actual responses where possible.`,
        response_json_schema: {
          type: "object",
          properties: {
            overall_score: { type: "number" },
            overall_summary: { type: "string" },
            pillar_scores: {
              type: "object",
              additionalProperties: {
                type: "object",
                properties: {
                  score: { type: "number" },
                  status: { type: "string" },
                  key_insight: { type: "string" }
                }
              }
            },
            strengths: { type: "array", items: { type: "string" } },
            weaknesses: { type: "array", items: { type: "string" } },
            quick_wins: { type: "array", items: { type: "string" } },
            strategic_priorities: { type: "array", items: { type: "string" } },
            brand_personality: {
              type: "object",
              properties: {
                archetype: { type: "string" },
                description: { type: "string" }
              }
            }
          },
          required: ["overall_score", "overall_summary", "pillar_scores", "strengths", "weaknesses", "quick_wins", "strategic_priorities"]
        }
      });

      setAnalysis(result);
    } catch (error) {
      console.error('Analysis error:', error);
    } finally {
      setIsAnalyzing(false);
    }
  };

  useEffect(() => {
    if (questionnaire?.responses && !analysis && !isAnalyzing) {
      runAnalysis();
    }
  }, [questionnaire]);

  if (isLoading) {
    return (
      <div className="flex items-center justify-center min-h-[60vh]">
        <Loader2 className="w-8 h-8 animate-spin text-orange-500" />
      </div>
    );
  }

  if (!questionnaire) {
    return (
      <div className="max-w-2xl mx-auto text-center py-16">
        <div className="w-20 h-20 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <Target className="w-10 h-10 text-orange-500" />
        </div>
        <h1 className="text-3xl font-bold text-slate-900 mb-4">No Brand Audit Found</h1>
        <p className="text-slate-600 mb-8">Complete your brand audit questionnaire to see your brand health analysis.</p>
        <Link to={createPageUrl('Questionnaire')}>
          <Button size="lg">
            Start Brand Audit
            <ArrowRight className="w-5 h-5 ml-2" />
          </Button>
        </Link>
      </div>
    );
  }

  const tier = questionnaire.maturity_tier;
  const tierData = tierInfo[tier];

  return (
    <div className="space-y-8">
      {/* Header */}
      <div className="flex items-center justify-between">
        <div>
          <h1 className="text-4xl font-bold text-slate-900 mb-2">Brand Health Report</h1>
          <div className="flex items-center gap-3">
            <Badge className={`${tierData.color} text-lg px-4 py-1`}>
              {tierData.emoji} {tier} Tier
            </Badge>
            <span className="text-slate-500">Last updated: {new Date(questionnaire.updated_date).toLocaleDateString()}</span>
          </div>
        </div>
        <div className="flex gap-3">
          <Button variant="outline" onClick={runAnalysis} disabled={isAnalyzing}>
            <RefreshCw className={`w-4 h-4 mr-2 ${isAnalyzing ? 'animate-spin' : ''}`} />
            Re-analyze
          </Button>
          <Link to={createPageUrl('Questionnaire')}>
            <Button variant="outline">
              Edit Responses
            </Button>
          </Link>
        </div>
      </div>

      {isAnalyzing ? (
        <Card className="p-12">
          <div className="text-center">
            <Loader2 className="w-12 h-12 animate-spin text-orange-500 mx-auto mb-4" />
            <h2 className="text-xl font-semibold text-slate-900 mb-2">Analyzing Your Brand...</h2>
            <p className="text-slate-500">Our AI is reviewing your responses and generating insights</p>
          </div>
        </Card>
      ) : analysis ? (
        <>
          {/* Overall Score Card */}
          <Card className="bg-gradient-to-br from-orange-50 to-amber-50 border-orange-200">
            <CardContent className="p-8">
              <div className="grid md:grid-cols-3 gap-8 items-center">
                <div className="text-center">
                  <div className="relative inline-flex items-center justify-center">
                    <svg className="w-32 h-32 transform -rotate-90">
                      <circle cx="64" cy="64" r="56" stroke="#e2e8f0" strokeWidth="12" fill="none" />
                      <circle 
                        cx="64" cy="64" r="56" 
                        stroke="#f97316" 
                        strokeWidth="12" 
                        fill="none"
                        strokeDasharray={`${(analysis.overall_score / 100) * 352} 352`}
                        strokeLinecap="round"
                      />
                    </svg>
                    <span className="absolute text-4xl font-bold text-slate-900">{analysis.overall_score}</span>
                  </div>
                  <p className="mt-2 text-slate-600 font-medium">Brand Health Score</p>
                </div>

                <div className="md:col-span-2">
                  <h2 className="text-2xl font-bold text-slate-900 mb-3">Executive Summary</h2>
                  <p className="text-slate-700 text-lg leading-relaxed mb-4">{analysis.overall_summary}</p>

                  {analysis.brand_personality && (
                    <div className="inline-flex items-center gap-2 bg-white/70 px-4 py-2 rounded-full">
                      <span className="text-slate-600">Brand Archetype:</span>
                      <span className="font-semibold text-orange-600">{analysis.brand_personality.archetype}</span>
                      <span className="text-slate-500">â€” {analysis.brand_personality.description}</span>
                    </div>
                  )}
                </div>
              </div>
            </CardContent>
          </Card>

          {/* Pillar Scores */}
          <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
            {Object.entries(pillarConfig).map(([key, config]) => {
              const pillarData = analysis.pillar_scores?.[key] || { score: 0, status: 'needs_work', key_insight: 'No data available' };
              const Icon = config.icon;

              return (
                <Card key={key} className="hover:shadow-md transition-shadow">
                  <CardContent className="p-5">
                    <div className="flex items-start justify-between mb-3">
                      <div className={`p-2 rounded-lg ${config.bgColor}`}>
                        <Icon className={`w-5 h-5 ${config.color}`} />
                      </div>
                      <Badge variant={
                        pillarData.status === 'strong' ? 'default' :
                        pillarData.status === 'developing' ? 'secondary' : 'outline'
                      }>
                        {pillarData.status === 'strong' && <CheckCircle className="w-3 h-3 mr-1" />}
                        {pillarData.status === 'needs_work' && <AlertCircle className="w-3 h-3 mr-1" />}
                        {pillarData.status}
                      </Badge>
                    </div>

                    <h3 className="font-semibold text-slate-900 mb-1">{config.name}</h3>
                    <p className="text-xs text-slate-500 mb-3">{config.description}</p>

                    <div className="mb-2">
                      <div className="flex justify-between text-sm mb-1">
                        <span className="text-slate-600">Score</span>
                        <span className="font-semibold">{pillarData.score}/100</span>
                      </div>
                      <Progress value={pillarData.score} className="h-2" />
                    </div>

                    <p className="text-sm text-slate-600 mt-3 italic">"{pillarData.key_insight}"</p>
                  </CardContent>
                </Card>
              );
            })}
          </div>

          {/* Insights Tabs */}
          <Tabs defaultValue="strengths" className="space-y-4">
            <TabsList className="grid w-full grid-cols-4">
              <TabsTrigger value="strengths">Strengths</TabsTrigger>
              <TabsTrigger value="weaknesses">Weaknesses</TabsTrigger>
              <TabsTrigger value="quick_wins">Quick Wins</TabsTrigger>
              <TabsTrigger value="strategic">Strategic Priorities</TabsTrigger>
            </TabsList>

            <TabsContent value="strengths">
              <Card>
                <CardHeader>
                  <CardTitle className="flex items-center gap-2 text-green-600">
                    <CheckCircle className="w-5 h-5" />
                    What You're Doing Well
                  </CardTitle>
                </CardHeader>
                <CardContent>
                  <ul className="space-y-3">
                    {analysis.strengths?.map((item, idx) => (
                      <li key={idx} className="flex items-start gap-3 p-3 bg-green-50 rounded-lg">
                        <CheckCircle className="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" />
                        <span className="text-slate-700">{item}</span>
                      </li>
                    ))}
                  </ul>
                </CardContent>
              </Card>
            </TabsContent>

            <TabsContent value="weaknesses">
              <Card>
                <CardHeader>
                  <CardTitle className="flex items-center gap-2 text-amber-600">
                    <AlertCircle className="w-5 h-5" />
                    Areas for Improvement
                  </CardTitle>
                </CardHeader>
                <CardContent>
                  <ul className="space-y-3">
                    {analysis.weaknesses?.map((item, idx) => (
                      <li key={idx} className="flex items-start gap-3 p-3 bg-amber-50 rounded-lg">
                        <AlertCircle className="w-5 h-5 text-amber-500 flex-shrink-0 mt-0.5" />
                        <span className="text-slate-700">{item}</span>
                      </li>
                    ))}
                  </ul>
                </CardContent>
              </Card>
            </TabsContent>

            <TabsContent value="quick_wins">
              <Card>
                <CardHeader>
                  <CardTitle className="flex items-center gap-2 text-blue-600">
                    <Lightbulb className="w-5 h-5" />
                    Quick Wins (Do This Week)
                  </CardTitle>
                </CardHeader>
                <CardContent>
                  <ul className="space-y-3">
                    {analysis.quick_wins?.map((item, idx) => (
                      <li key={idx} className="flex items-start gap-3 p-3 bg-blue-50 rounded-lg">
                        <ChevronRight className="w-5 h-5 text-blue-500 flex-shrink-0 mt-0.5" />
                        <span className="text-slate-700">{item}</span>
                      </li>
                    ))}
                  </ul>
                </CardContent>
              </Card>
            </TabsContent>

            <TabsContent value="strategic">
              <Card>
                <CardHeader>
                  <CardTitle className="flex items-center gap-2 text-purple-600">
                    <Target className="w-5 h-5" />
                    Strategic Priorities (Long-term)
                  </CardTitle>
                </CardHeader>
                <CardContent>
                  <ul className="space-y-3">
                    {analysis.strategic_priorities?.map((item, idx) => (
                      <li key={idx} className="flex items-start gap-3 p-3 bg-purple-50 rounded-lg">
                        <span className="w-6 h-6 bg-purple-500 text-white rounded-full flex items-center justify-center text-sm flex-shrink-0">
                          {idx + 1}
                        </span>
                        <span className="text-slate-700">{item}</span>
                      </li>
                    ))}
                  </ul>
                </CardContent>
              </Card>
            </TabsContent>
          </Tabs>
        </>
      ) : (
        <Card className="p-8 text-center">
          <AlertCircle className="w-12 h-12 text-amber-500 mx-auto mb-4" />
          <h2 className="text-xl font-semibold text-slate-900 mb-2">Analysis Not Available</h2>
          <p className="text-slate-500 mb-4">Complete more questions in your brand audit to generate insights.</p>
          <Link to={createPageUrl('Questionnaire')}>
            <Button>Continue Brand Audit</Button>
          </Link>
        </Card>
      )}
    </div>
  );
}